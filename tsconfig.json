{
  "compilerOptions": {
    "target": "es6",
    // "lib": ["dom", "dom.iterable", "esnext"],
    // "downlevelIteration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": false,
    "esModuleInterop": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    // "baseUrl": "./",
    // "paths": {
    //   "@hooks/*": ["src/hooks/*"]
    // },
    "importHelpers": true,
    "incremental": false,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "lib/esm"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compileOnSave": false
}
